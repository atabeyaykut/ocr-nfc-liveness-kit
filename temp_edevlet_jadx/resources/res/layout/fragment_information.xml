<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mkt_accident_information_parent_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mkt_breadcrumb_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.25"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>
            <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.75"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logo_container_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_major"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="160dp"
                app:cardElevation="@dimen/plane_04"
                app:cardUseCompatPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_driver_info"
                    android:padding="@dimen/spacing_medium"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/mkt_breadcrumb_driver"/>
            </com.google.android.material.card.MaterialCardView>
            <View
                android:id="@+id/item_divider"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="@dimen/spacing_major"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/logo_container_1"
                app:layout_constraintStart_toEndOf="@+id/logo_container_0"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logo_container_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_major"
                app:cardBackgroundColor="@color/colorPrimary"
                app:cardCornerRadius="160dp"
                app:cardElevation="@dimen/plane_04"
                app:cardUseCompatPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintStart_toEndOf="@+id/guideline1"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_car_info"
                    android:padding="@dimen/spacing_medium"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/mkt_breadcrumb_report"/>
            </com.google.android.material.card.MaterialCardView>
            <View
                android:id="@+id/item_divider_2"
                android:background="@color/mkt_breadcrumb_passive"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="@dimen/spacing_major"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/logo_container_2"
                app:layout_constraintStart_toEndOf="@+id/logo_container_1"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logo_container_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_major"
                app:cardBackgroundColor="@color/mkt_breadcrumb_passive"
                app:cardCornerRadius="160dp"
                app:cardElevation="@dimen/plane_04"
                app:cardUseCompatPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline3"
                app:layout_constraintStart_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_approve_info"
                    android:padding="@dimen/spacing_medium"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/mkt_breadcrumb_qr"/>
            </com.google.android.material.card.MaterialCardView>
            <View
                android:id="@+id/item_divider_3"
                android:background="@color/mkt_breadcrumb_passive"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="@dimen/spacing_major"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/logo_container_3"
                app:layout_constraintStart_toEndOf="@+id/logo_container_2"
                app:layout_constraintTop_toTopOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logo_container_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_major"
                app:cardBackgroundColor="@color/mkt_breadcrumb_passive"
                app:cardCornerRadius="160dp"
                app:cardElevation="@dimen/plane_04"
                app:cardUseCompatPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline3"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/img_final_info"
                    android:padding="@dimen/spacing_medium"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/mkt_breadcrumb_final"/>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <include
            android:id="@+id/no_connection_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_minor"
            android:layout_marginStart="@dimen/spacing_minor"
            android:layout_marginEnd="@dimen/spacing_minor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mkt_breadcrumb_container"
            layout="@layout/include_no_connection"/>
        <include
            android:id="@+id/system_error_view"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_minor"
            android:layout_marginStart="@dimen/spacing_minor"
            android:layout_marginEnd="@dimen/spacing_minor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mkt_breadcrumb_container"
            layout="@layout/include_system_error"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mkt_accident_information_content_container"
            android:paddingBottom="@dimen/spacing_xxxlarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mkt_breadcrumb_container">
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textSize="16sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:id="@+id/txt_introduction_main_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_major"
                android:text="@string/mkt_location_photo_page_title_alternative"
                android:lineSpacingExtra="2sp"
                android:fontFamily="@font/arimo_bold"
                android:layout_marginStart="@dimen/spacing_major"
                android:layout_marginEnd="@dimen/spacing_major"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textSize="16sp"
                android:ellipsize="end"
                android:id="@+id/txt_introduction_main_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_minor"
                android:text="@string/mkt_location_photo_page_description"
                android:fontFamily="@font/arimo"
                android:layout_marginStart="@dimen/spacing_major"
                android:layout_marginEnd="@dimen/spacing_major"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_introduction_main_title"
                style="@style/Item_Subtitle_3"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/mkt_policy_page_vehicle_licence_card"
                android:paddingBottom="@dimen/spacing_medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/spacing_major"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_introduction_main_description">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:id="@+id/mkt_policy_vehicle_licence_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_major"
                        android:text="@string/mkt_location_photo_card_title"
                        android:textAllCaps="true"
                        android:fontFamily="@font/arimo_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/container_mkt_vehicle_licence_plate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_major"
                        android:layout_marginStart="@dimen/spacing_major"
                        android:layout_marginEnd="@dimen/spacing_major"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mkt_policy_vehicle_licence_title">
                        <com.airbnb.epoxy.EpoxyRecyclerView
                            android:id="@+id/rcl_mkt_car_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="13sp"
                        android:ellipsize="end"
                        android:id="@+id/txt_car_helper_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:layout_marginBottom="@dimen/spacing_major"
                        android:text="@string/mkt_location_photo_count_hint"
                        android:fontFamily="@font/arimo"
                        android:layout_marginStart="@dimen/spacing_major"
                        android:layout_marginEnd="@dimen/spacing_major"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/container_mkt_vehicle_licence_plate"
                        style="@style/Item_Subtitle_3"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/mkt_location_change_card"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/spacing_major"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mkt_policy_page_vehicle_licence_card">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/spacing_major">
                    <TextView
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:id="@+id/mkt_policy_insurance_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_major"
                        android:text="@string/mkt_location_location_card_title"
                        android:textAllCaps="true"
                        android:fontFamily="@font/arimo_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:textSize="16sp"
                        android:ellipsize="end"
                        android:id="@+id/txt_location_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:fontFamily="@font/arimo"
                        android:layout_marginStart="@dimen/spacing_major"
                        android:layout_marginEnd="@dimen/spacing_major"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mkt_policy_insurance_title"
                        style="@style/Item_Subtitle_3"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:id="@+id/txt_location_helper_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:layout_marginBottom="@dimen/spacing_major"
                        android:text="@string/mkt_accident_location_photo_helper"
                        android:fontFamily="@font/arimo"
                        android:layout_marginStart="@dimen/spacing_major"
                        android:layout_marginEnd="@dimen/spacing_major"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_location_text"
                        style="@style/Item_Subtitle_3"/>
                    <Button
                        android:textStyle="bold"
                        android:id="@+id/btn_location_edit"
                        android:padding="@dimen/spacing_minor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:text="@string/mkt_location_button_edit"
                        android:textAllCaps="true"
                        android:fontFamily="@font/arimo_bold"
                        android:layout_marginEnd="@dimen/spacing_major"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_location_helper_description"
                        style="?attr/borderlessButtonStyle"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/mkt_accident_information_accident_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/spacing_major"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mkt_location_change_card">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:id="@+id/mkt_accident_information_description_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_major"
                        android:text="@string/mkt_location_explanation_card_title"
                        android:textAllCaps="true"
                        android:fontFamily="@font/arimo_bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/text_input_accident_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/spacing_major"
                        android:hint="@string/mkt_location_explanation_hint"
                        app:counterEnabled="true"
                        app:counterMaxLength="500"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/Manual_Error_Appearance"
                        app:hintTextAppearance="?attr/textAppearanceCaption"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/mkt_accident_information_description_title"
                        style="@style/Widget.App.TextInputLayout">
                        <com.google.android.material.textfield.TextInputEditText
                            android:textAppearance="?attr/textAppearanceSubtitle1"
                            android:scrollbarStyle="insideInset"
                            android:gravity="top"
                            android:id="@+id/edit_accident_description"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:lines="10"
                            android:ems="10"
                            android:maxLength="500"
                            android:inputType="textMultiLine"
                            android:imeOptions="actionDone"
                            android:overScrollMode="always"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_manual_next"
                android:padding="@dimen/spacing_major"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_major"
                android:text="@string/mkt_page_continue_button"
                android:textAllCaps="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mkt_accident_information_accident_description"
                style="@style/buttonWhite"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
