<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/no_connection_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginStart="@dimen/spacing_minor"
        android:layout_marginEnd="@dimen/spacing_minor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/include_no_connection"/>
    <include
        android:id="@+id/system_error_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginStart="@dimen/spacing_minor"
        android:layout_marginEnd="@dimen/spacing_minor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/include_system_error"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/profile_cv_banner"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/radius_xsmall"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/profile_banner_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/spacing_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:id="@+id/institution_detail_logo"
                        android:visibility="gone"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:layout_marginStart="@dimen/spacing_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/modal_nfc_logo"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_view"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_margin="@dimen/spacing_major"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:lottie_autoPlay="false"
                        app:lottie_loop="false"
                        app:lottie_rawRes="@raw/two_factor_banner_icon"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textAppearance="?attr/textAppearanceSubtitle1"
                        android:ellipsize="end"
                        android:id="@+id/txt_banner_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:text="@string/profile_banner_title"
                        android:fontFamily="@font/arimo_bold"
                        android:layout_marginStart="@dimen/spacing_major"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/animation_view"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textAppearance="?attr/textAppearanceSubtitle2"
                        android:ellipsize="end"
                        android:id="@+id/txt_banner_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_micro"
                        android:text="@string/profile_banner_description"
                        android:fontFamily="@font/arimo"
                        android:layout_marginStart="@dimen/spacing_major"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/animation_view"
                        app:layout_constraintTop_toBottomOf="@+id/txt_banner_title"/>
                    <com.google.android.material.button.MaterialButton
                        android:textColor="@color/item_subtitle_light_2"
                        android:id="@+id/profile_banner_negative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_banner_negative"
                        android:textAllCaps="true"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        app:layout_constraintEnd_toStartOf="@+id/profile_banner_positive"
                        app:layout_constraintTop_toBottomOf="@+id/txt_banner_description"
                        style="?attr/borderlessButtonStyle"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/profile_banner_positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_banner_positive"
                        android:textAllCaps="true"
                        android:layout_marginEnd="@dimen/spacing_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txt_banner_description"
                        style="?attr/borderlessButtonStyle"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/profile_cv_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_high"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_cv_banner">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_major"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_contact_phone_title"
                        android:lineSpacingExtra="3sp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/arimo_bold"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_tel"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:id="@+id/profile_phone_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:fontFamily="@font/arimo_bold"/>
                    <Button
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:id="@+id/profile_btn_refresh_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_refresh_contact"
                        android:textAllCaps="true"
                        style="@style/buttonWhite"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="#999999"
                        android:id="@+id/profile_txt_info_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_contact_phone_info"
                        android:fontFamily="@font/arimo"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/container_id_verification"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_gravity="center_horizontal"
                            android:background="@color/dark_holo"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="@dimen/spacing_large"/>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_contact_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:text="@string/profile_contact_phone_id_verification"
                            android:lineSpacingExtra="3sp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/arimo_bold"/>
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:id="@+id/text_id_verification_page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:text="@string/profile_contact_phone_id_verification_description"
                            android:drawablePadding="@dimen/spacing_xlarge"
                            android:fontFamily="@font/arimo"
                            app:drawableEndCompat="@drawable/arrow_next"/>
                        <View
                            android:layout_gravity="center_horizontal"
                            android:background="@color/light_holo"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="@dimen/spacing_large"/>
                        <Button
                            android:gravity="center"
                            android:layout_gravity="end"
                            android:id="@+id/profile_btn_id_verification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_major"
                            android:text="@string/profile_refresh_contact_id_verify"
                            android:textAllCaps="true"
                            style="@style/buttonWhite"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/profile_cv_email_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_high"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_cv_contact">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_major"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_contact_email_title"
                        android:lineSpacingExtra="3sp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/arimo_bold"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_mail"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#00a059"
                        android:id="@+id/profile_email_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_email_verified"
                        android:fontFamily="@font/arimo_bold"/>
                    <Button
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:id="@+id/profile_btn_email_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/profile_refresh_contact"
                        android:textAllCaps="true"
                        style="@style/buttonWhite"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="#999999"
                        android:id="@+id/profile_txt_info_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_contact_email_info"
                        android:fontFamily="@font/arimo"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/profile_cv_identity"
                android:padding="@dimen/spacing_xmajor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_high"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_cv_email_contact">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_major"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_identity_title"
                        android:lineSpacingExtra="3sp"
                        android:fontFamily="@font/arimo_bold"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_name_identity"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_father_name_identity"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_father_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_mother_name_identity"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_mother_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxEms="15"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_birthplace_identity"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_birthplace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_birthdate_identity"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_birthdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium">
                        <androidx.constraintlayout.widget.Guideline
                            android:orientation="vertical"
                            android:id="@+id/guideline"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintGuide_begin="126dp"/>
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_address_identity"
                            android:fontFamily="@font/arimo"
                            android:layout_marginEnd="@dimen/spacing_minor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/guideline"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:id="@+id/profile_txt_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/guideline"
                            app:layout_constraintTop_toTopOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_identity_update"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_update_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="#999999"
                        android:id="@+id/profile_txt_info_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_identity_info"
                        android:fontFamily="@font/arimo"/>
                    <Button
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:id="@+id/profile_btn_refresh_identity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:text="@string/profile_identity_refresh"
                        android:textAllCaps="true"
                        style="@style/buttonWhite"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
