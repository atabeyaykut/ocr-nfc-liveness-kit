<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/result_dialog_status_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_major"
        android:src="@drawable/modal_announcement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:gravity="center"
        android:id="@+id/result_dialog_txt_title"
        android:padding="@dimen/spacing_major"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_medium"
        android:text="@string/connection_error_info"
        android:fontFamily="@font/arimo_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_dialog_status_icon"/>
    <TextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:gravity="center"
        android:id="@+id/result_dialog_txt_content"
        android:padding="@dimen/spacing_major"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_medium"
        android:text="@string/connection_error_info"
        android:fontFamily="@font/arimo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_dialog_txt_title"/>
</androidx.constraintlayout.widget.ConstraintLayout>
