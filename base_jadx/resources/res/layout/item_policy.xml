<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_policy_type_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_major"
        android:layout_marginEnd="@dimen/spacing_major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline_policy_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="144dp"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#ff999999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mkt_policy_page_insurance_type_title"
            android:fontFamily="@font/arimo"
            android:layout_marginEnd="@dimen/spacing_minor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_policy_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textStyle="bold"
            android:gravity="end"
            android:id="@+id/txt_policy_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:layout_marginEnd="@dimen/spacing_minor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline_policy_type"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:background="@color/light_holo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_policy_type"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_policy_insurance_company_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginStart="@dimen/spacing_major"
        android:layout_marginEnd="@dimen/spacing_major"
        app:layout_constraintBottom_toTopOf="@+id/mkt_policy_expire_date_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_policy_type_container">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline_insurance_company"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="144dp"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#ff999999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mkt_policy_page_insurance_company_title"
            android:fontFamily="@font/arimo"
            android:layout_marginEnd="@dimen/spacing_minor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_insurance_company"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textStyle="bold"
            android:gravity="end"
            android:id="@+id/txt_insurance_company_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:layout_marginEnd="@dimen/spacing_minor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline_insurance_company"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:background="@color/light_holo"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/spacing_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_insurance_company_value"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mkt_policy_expire_date_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_major"
        android:layout_marginStart="@dimen/spacing_major"
        android:layout_marginEnd="@dimen/spacing_major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_policy_insurance_company_container">
        <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:id="@+id/guideline_expire_date_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="144dp"/>
        <TextView
            android:textSize="14sp"
            android:textStyle="normal"
            android:textColor="#ff999999"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/mkt_policy_page_insurance_expire_date_title"
            android:fontFamily="@font/arimo"
            android:layout_marginEnd="@dimen/spacing_minor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline_expire_date_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textAppearance="?attr/textAppearanceBody2"
            android:textStyle="bold"
            android:gravity="end"
            android:id="@+id/txt_expire_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arimo_bold"
            android:layout_marginEnd="@dimen/spacing_minor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/guideline_expire_date_line"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/item_divider"
        android:background="@color/dark_holo"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginStart="@dimen/spacing_major"
        android:layout_marginEnd="@dimen/spacing_major"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mkt_policy_expire_date_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
