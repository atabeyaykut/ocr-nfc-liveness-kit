<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/result_dialog_status_container"
        android:background="@color/error_color"
        android:layout_width="0dp"
        android:layout_height="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/result_dialog_status_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/error"/>
    </LinearLayout>
    <TextView
        android:textAppearance="?attr/textAppearanceBody2"
        android:gravity="center"
        android:id="@+id/result_dialog_txt_content"
        android:padding="@dimen/spacing_major"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacing_medium"
        android:text="@string/connection_error_info"
        android:fontFamily="@font/arimo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_dialog_status_container"/>
</androidx.constraintlayout.widget.ConstraintLayout>
