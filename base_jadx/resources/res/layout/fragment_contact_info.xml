<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile_contact_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/no_connection_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginStart="@dimen/spacing_minor"
        android:layout_marginEnd="@dimen/spacing_minor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/include_no_connection"/>
    <include
        android:id="@+id/system_error_view"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_minor"
        android:layout_marginStart="@dimen/spacing_minor"
        android:layout_marginEnd="@dimen/spacing_minor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/include_system_error"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/profile_fragment_progressBar"
        android:visibility="gone"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminateTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/profile_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/profile_cv_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_high"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_major"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_contact_phone_title"
                        android:lineSpacingExtra="3sp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/arimo_bold"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#ff999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_tel"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_tel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:id="@+id/profile_phone_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:fontFamily="@font/arimo_bold"/>
                    <Button
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:id="@+id/profile_btn_refresh_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_refresh_contact"
                        android:textAllCaps="true"
                        style="@style/buttonWhite"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="#ff999999"
                        android:id="@+id/profile_txt_info_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_contact_phone_info"
                        android:fontFamily="@font/arimo"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/container_id_verification"
                        android:visibility="visible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <View
                            android:layout_gravity="center_horizontal"
                            android:background="@color/dark_holo"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="@dimen/spacing_large"/>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/profile_contact_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:text="@string/profile_contact_phone_id_verification"
                            android:lineSpacingExtra="3sp"
                            android:textAllCaps="true"
                            android:fontFamily="@font/arimo_bold"/>
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#ff999999"
                            android:id="@+id/text_id_verification_page"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_large"
                            android:text="@string/profile_contact_phone_id_verification_description"
                            android:drawablePadding="@dimen/spacing_xlarge"
                            android:fontFamily="@font/arimo"
                            app:drawableEndCompat="@drawable/arrow_next"/>
                        <View
                            android:layout_gravity="center_horizontal"
                            android:background="@color/light_holo"
                            android:layout_width="match_parent"
                            android:layout_height="3dp"
                            android:layout_marginTop="@dimen/spacing_large"/>
                        <Button
                            android:gravity="center"
                            android:layout_gravity="end"
                            android:id="@+id/profile_btn_id_verification"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_major"
                            android:text="@string/profile_refresh_contact_id_verify"
                            android:textAllCaps="true"
                            style="@style/buttonWhite"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_gravity="center"
                android:id="@+id/profile_cv_email_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_high"
                app:cardCornerRadius="@dimen/radius_large"
                app:cardElevation="@dimen/plane_04"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profile_cv_contact">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_major"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/profile_contact_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_contact_email_title"
                        android:lineSpacingExtra="3sp"
                        android:textAllCaps="true"
                        android:fontFamily="@font/arimo_bold"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_major"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:weightSum="2">
                        <TextView
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="#ff999999"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_mail"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo"/>
                        <TextView
                            android:textAppearance="?attr/textAppearanceBody2"
                            android:textStyle="bold"
                            android:gravity="end|center_vertical"
                            android:id="@+id/profile_txt_mail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/arimo_bold"
                            android:layout_marginEnd="@dimen/spacing_minor"/>
                    </LinearLayout>
                    <View
                        android:layout_gravity="center_horizontal"
                        android:background="@color/light_holo"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:id="@+id/profile_email_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_email_verified"
                        android:fontFamily="@font/arimo_bold"/>
                    <Button
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:id="@+id/profile_btn_email_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_medium"
                        android:text="@string/profile_refresh_contact"
                        android:textAllCaps="true"
                        style="@style/buttonWhite"/>
                    <TextView
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:textColor="#ff999999"
                        android:id="@+id/profile_txt_info_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_minor"
                        android:text="@string/profile_contact_email_info"
                        android:fontFamily="@font/arimo"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
