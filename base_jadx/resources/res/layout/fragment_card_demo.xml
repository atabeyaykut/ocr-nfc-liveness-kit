<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textStyle="bold"
        android:id="@+id/txt_demo_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_major"
        android:text="@string/title_card_scan"
        android:layout_marginStart="@dimen/spacing_major"
        android:layout_marginEnd="@dimen/spacing_major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textAppearance="?attr/textAppearanceSubtitle2"
        android:id="@+id/txt_demo_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_minor"
        android:text="@string/subtitle_card_scan"
        android:layout_marginStart="@dimen/spacing_major"
        android:layout_marginEnd="@dimen/spacing_major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_demo_title"/>
    <TextView
        android:textAppearance="?attr/textAppearanceCaption"
        android:id="@+id/txt_demo_reference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_major"
        android:text="@string/subtitle_card_scan"
        android:layout_marginStart="@dimen/spacing_major"
        android:layout_marginEnd="@dimen/spacing_major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_demo_subtitle"/>
    <Button
        android:gravity="center"
        android:id="@+id/btn_start_scan_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_minor"
        android:text="@string/button_scan_identity_card"
        android:textAllCaps="true"
        android:layout_marginEnd="@dimen/spacing_major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_demo_reference"
        style="@style/buttonWhite"/>
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_major"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_scan_card"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_progress="@integer/lottie_border_lenght"
        app:lottie_rawRes="@raw/nfc_android"/>
</androidx.constraintlayout.widget.ConstraintLayout>
