<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="0dp"
        android:layout_height="148dp"
        app:cardCornerRadius="@dimen/radius_large"
        app:cardElevation="@dimen/plane_04"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_major"
            android:layout_marginEnd="@dimen/spacing_minor">
            <ImageView
                android:id="@+id/dashboard_item_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="@dimen/spacing_major"
                android:importantForAccessibility="no"/>
            <TextView
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textStyle="bold"
                android:id="@+id/dashboard_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_minor"
                android:lineSpacingExtra="2sp"
                android:fontFamily="@font/arimo_bold"
                android:layout_marginEnd="@dimen/spacing_micro"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
