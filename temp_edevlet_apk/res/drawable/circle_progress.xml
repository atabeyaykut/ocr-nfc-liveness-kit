<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="ring" android:thicknessRatio="48.0" android:useLevel="false">
            <solid android:color="@color/dark_holo" />
        </shape>
    </item>
    <item>
        <rotate android:fromDegrees="270.0" android:toDegrees="270.0">
            <shape android:shape="ring" android:thicknessRatio="48.0" android:useLevel="true">
                <gradient android:startColor="@color/colorAccent" android:endColor="@color/colorPrimaryDark" android:angle="0.0" android:type="sweep" />
            </shape>
        </rotate>
    </item>
</layer-list>
